<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>
        <%= clipData.title %>
    </title>
    <meta property="og:title" content="<%= clipData.title %>">
    <meta property="og:url" content="https://media.lillie.rs/clips/<%= clipData.id %>">
    <meta property="og:site_name" content="<%= clipData.title %>">
    <meta property="og:image" content="https://media.lillie.rs/thumbnail/<%= clipData.id %>">
    <meta property="og:video" content="https://media.lillie.rs/raw/<%= clipData.id %>">
    <meta property="og:video:url" content="https://media.lillie.rs/raw/<%= clipData.id %>">
    <meta property="og:video:secure_url" content="https://media.lillie.rs/raw/<%= clipData.id %>">
    <meta property="og:video:type" content="video/mp4">
    <meta property="og:video:width" content="<%= clipData.width %>">
    <meta property="og:video:height" content="<%= clipData.height %>">
    <meta property="og:type" content="video.other">
    <meta name="twitter:card" content="player">
    <meta name="twitter:title" content="<%= clipData.title %>">
    <meta name="twitter:image" content="https://media.lillie.rs/thumbnail/<%= clipData.id %>">
    <meta name="twitter:player" content="https://media.lillie.rs/raw/<%= clipData.id %>">
    <meta name="twitter:player:stream" content="https://media.lillie.rs/raw/<%= clipData.id %>">
    <meta name="twitter:player:width" content="<%= clipData.width %>">
    <meta name="twitter:player:height" content="<%= clipData.height %>">
</head>

<body class="m-3" style="background-color: dimgray;">
    <video
        style="border-radius: .75rem; object-fit: contain; width: 100%; height: auto; max-width: <%= clipData.width %>px;"
        width="<%= clipData.width %>" height="<%= clipData.height %>" controls>
        <source src="/raw/<%= clipData.id %>" type="video/mp4">
    </video>
    <div class="flex flex-col flex-no-wrap w-full max-w-[64rem] justify-between text-left">
        <h3 class="fs-3 text-light font-semibold m-0 break-all mb-2">
            <%= clipData.title %>
                <%= clipData.visible ? "" : " (Private)" %>
        </h3>
        <p class="fs-5 text-body">Uploaded by: <%= clipData.username %>
        </p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>
